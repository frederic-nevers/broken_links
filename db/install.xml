<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/broken_links/db" VERSION="20130624" COMMENT="XMLDB file for Moodle blocks/broken_links"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_broken_links" COMMENT="Contains all data the 'Broken links' block needs to generate and display data" NEXT="block_broken_links_fields">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="course"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course in which the URL is located" PREVIOUS="id" NEXT="module"/>
        <FIELD NAME="module" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Module type in which the URL is located" PREVIOUS="course" NEXT="cmid"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course module ID in which the URL is located" PREVIOUS="module" NEXT="urltocheck"/>
        <FIELD NAME="urltocheck" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Actual URL to be checked by the system" PREVIOUS="cmid" NEXT="timestamp"/>
        <FIELD NAME="timestamp" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Timestamp of when the URL was checked" PREVIOUS="urltocheck" NEXT="response"/>
        <FIELD NAME="response" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" COMMENT="Response code sent by the server which the URL points to" PREVIOUS="timestamp" NEXT="ignoreurl"/>
        <FIELD NAME="ignoreurl" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" COMMENT="Sets whether the URL should be ignored i.e. not be checked for response" PREVIOUS="response"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_broken_links_fields" COMMENT="Holds field definitions" PREVIOUS="block_broken_links">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="modname"/>
        <FIELD NAME="modname" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="id" NEXT="modtable"/>
        <FIELD NAME="modtable" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="modname" NEXT="field"/>
        <FIELD NAME="field" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="modtable" NEXT="getstring"/>
        <FIELD NAME="getstring" TYPE="text" NOTNULL="false" SEQUENCE="false" PREVIOUS="field" NEXT="active"/>
        <FIELD NAME="active" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" PREVIOUS="getstring" NEXT="lastcron"/>
        <FIELD NAME="lastcron" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" PREVIOUS="active"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>